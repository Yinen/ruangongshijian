.header-group {
  margin: 0% 0% 10% 0%;
}

.header {
  width: 100%;
  height: 30%;
  background-image: url('');
}

.header-icon {
  width: 100%;
  height: 200rpx;
  padding-top: 10%;
}

.header-icon image {
  width: 120rpx;
  height: 130rpx;
  float: left;
  margin: 0 50rpx;
}

.header-icon text{
  font-size: 25rpx;
}

.information {
  border-bottom: 1rpx solid rgb(189, 185, 185);
  position: relative;
}

.information image{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin: 0 40rpx;
}

.information .my-information {
  font-size: 42rpx;
  color: rgb(14, 6, 4);
  padding: 0rpx;
  height: 80rpx;
  width: 80%;
  margin: 0 0rpx 0rpx 68rpx;
  display: table;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 40rpx;
  transform: rotate(45deg);
  top: 5rpx;
}

